<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pablo.adivinador.MainActivity"
    android:orientation="vertical"
    android:background="#C5CAE9"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAdivine"
        android:paddingBottom="20dp"
        android:textSize="20dp"
        android:textColor="#212121"        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMuestra"
        android:textColor="#212121"
        android:paddingBottom="20dp"
        android:textSize="20dp"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/botonMas"
        android:onClick="botonMas"
        android:background="#FFC107"
        android:textSize="20dp"
        />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="-"
           android:id="@+id/botonMenos"
           android:onClick="botonMenos"
           android:background="#8BC34A"
            android:paddingLeft="30dp"
           android:textSize="20dp"
           android:textAlignment="center"
           android:padding="0dp"
           android:layout_marginLeft="-5dip"
           android:layout_marginRight="-5dip"
           android:layout_marginTop="-5dip"
           android:layout_marginBottom="-5dip"

           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Adivinaste"
           android:id="@+id/botonAdivinaste"
           android:onClick="botonAdivinaste"
           android:background="#FF5252"



           />
   </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:id="@+id/imageViewAdivino"

        />
</LinearLayout>
